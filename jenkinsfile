pipeline {
    agent {
        docker {
            image 'maven:3.8.6-openjdk-11'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // allow Docker access
        }
    }

    environment {
        SONAR_URL = "http://13.222.28.200:9000"
        DOCKER_IMAGE = "rohit5299/ultimate-cicd"
    }

    stages {

        stage('Checkout') {
            steps {
                // Checkout code from GitHub
                git branch: 'main',
                    credentialsId: 'github', 
                    url: 'https://github.com/GodwinChineduNedu/mediplus'
            }
        }

        stage('Build and Test') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/mediplus-app') {
                    sh 'ls -ltr'
                    sh 'mvn clean package'
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/mediplus-app') {
                        sh "mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}"
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/mediplus-app') {
                    script {
                        // Build Docker image
                        def dockerImage = docker.build("${DOCKER_IMAGE}:${BUILD_NUMBER}")
                        
                        // Push Docker image to Docker Hub
                        docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                            dockerImage.push()
                        }
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests') {
                        script {
                            sh """
                            git config --global user.email "godwinchinedunedu@gmail.com"
                            git config --global user.name "GodwinChineduNedu"
                            
                            # Update deployment YAML with new image tag
                            sed -i -E "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml

                            # Add, commit, and push changes safely
                            git add deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                            git push https://${GITHUB_TOKEN}@github.com/GodwinChineduNedu/mediplus.git main || echo "Push failed"
                            """
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully! üéâ'
        }
        failure {
            echo 'Pipeline failed. ‚ùå Check the logs.'
        }
    }
}
